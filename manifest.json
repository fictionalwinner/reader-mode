{
  "manifest_version": 2,

  "name": "Reader Mode",
  "version": "0.1.0",
  "description": "reader mode",

  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "notifications",
    "storage",
    "unlimitedStorage",
    "*://*/*"
  ],

  "background": {
    "persistent": true,
    "scripts": [
      "background.js"
    ]
  },

  "web_accessible_resources": [
    "reader/*"
  ]

}